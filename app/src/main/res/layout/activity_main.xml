<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.djsong.alkkago.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="[알까기 AI 와 인류의 대결 - AlkkaGo]" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="AI 의 훈련시간을 선택하세요."
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Please select AI Training length."
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Training"
        android:id="@+id/AI_no_training"
        android:textSize="18dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15 초 (15 sec.)"
        android:id="@+id/AI_training_15_sec"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="30 초 (30 sec.)"
    android:id="@+id/AI_training_30_sec"
    android:textSize="18dp"
    android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 분 (1 min.)"
        android:id="@+id/AI_training_1_min"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 분 (3 min.)"
        android:id="@+id/AI_training_3_min"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="종료 (Quit)"
        android:id="@+id/QuitApp"
        android:background="@color/button_material_dark"
        android:textColor="@color/switch_thumb_normal_material_light"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>
</LinearLayout>
